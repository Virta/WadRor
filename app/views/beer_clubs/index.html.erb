<h1>Beer Clubs</h1>

<!--<p id="notice"><%= notice %></p>-->

<table class='table'>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %>,
          <%= beer_club.city %>
          <i>(<%= beer_club.founded %>)</i>
        </td>
        <% if current_user %>
            <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user.is_admin? %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer club', new_beer_club_path, class:'btn btn-primary' if current_user %>
