<h1>Listing styles</h1>

<table class="table table-striped">

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= link_to 'Edit', edit_style_path(style) if current_user.is_admin? if current_user%></td>
        <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' } if current_user.is_admin? if current_user%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path, class:'btn btn-primary' if current_user.is_admin? if current_user %>
