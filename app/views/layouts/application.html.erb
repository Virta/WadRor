<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navibar">
  <%= link_to 'breweries', breweries_path %>
  <%= link_to 'beers', beers_path %>
  <%= link_to 'ratings', ratings_path %>
  <%= link_to 'users', users_path %>
  <%= link_to 'clubs', beer_clubs_path %>
  <%= link_to 'places', places_path %> |
  <% unless session[:user_id].nil? %>
    <%= link_to 'join a club', joinaclub_path %>
  <% end %> |
  <% if session[:user_id].nil? %>
    <%= link_to 'sign in', signin_path %>
    <%= link_to 'sign up', signup_path %>
  <% else %>
    <%= link_to current_user.username, user_path(current_user.id) %>
    <%= link_to 'rate a beer', new_rating_path %>
    <%= link_to 'sign out', signout_path, method: :delete %>
  <% end %>
</div>



<%= yield %>

</body>
</html>