<p id="notice"><%= notice %></p>

<h2><%= @beer.name %></h2>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<br>

<% if @beer.ratings.empty? %>
    <p> <%= @beer.name %> has not been rated!</p>
<% else %>
    <p> <%= @beer.name %> has <%= pluralize(@beer.ratings.count, 'rating', plural='ratings') %>, average: <%= @beer.average_rating %> </p>
<% end %>

<% if current_user %>
    <h4>Rate this beer:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        Score: <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>

    <%= link_to 'Edit', edit_beer_path(@beer) %>

<% end %>

<%= link_to 'Back', beers_path %>