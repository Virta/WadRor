<h1>Ratings</h1>

<ul>
  <% @ratings.each do |rating| %>
      <li>
        <%= rating %>
        <%= link_to rating.user.username, user_path(rating.user_id) %>
      </li>
  <% end %>
</ul>

<p>Total ratings: <%= @ratings.count %></p>

<br>

<p>Create a new <%= link_to 'rating', new_rating_path if current_user %></p>
